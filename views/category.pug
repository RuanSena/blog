extends layout

block content
    .container
        section.items-list.row.row-cols-1.p-4
            h3.mb-3= category.name
            ul.list-group
                each a in articles
                    li.list-group-item.list-group-item-action(style=`border-left: 5px solid ${category.color}; max-width: 55rem;`)
                        .d-flex.justify-content-between.align-items-baseline
                            h6.font-weight-bold= a.title
                            time(datetime=a.datetime.value)= a.datetime.formated
                        if a.description
                            p.pl-3.m-0= a.description
                        a.stretched-link(href=`/blog/${a.slug}`)